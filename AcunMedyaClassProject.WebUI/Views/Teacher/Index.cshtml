							</div>
							<div class="card-footer d-flex align-items-center justify-content-between">
								<a class="text-white text-decoration-none" href="#">Detayları Görüntüle</a>
								<div><i class="fas fa-angle-right"></i></div>
							</div>
						</div>
					</div>
				</div>

				@await Component.InvokeAsync("_TeacherLectureListComponentPartial")

				<div class="card">
					<div class="card-header bg-white">
						<h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i> Yaklaşan Etkinlikler</h5>
					</div>
					<div class="card-body">
						<div class="list-group">
							<a href="#" class="list-group-item list-group-item-action">
								<div class="d-flex w-100 justify-content-between">
									<h5 class="mb-1">CS101 - Vize Sınavı</h5>
									<small class="text-danger">2 gün kaldı</small>
								</div>
								<p class="mb-1">Bilgisayar Programlama I dersi vize sınavı - Saat: 10:00-12:00</p>
								<small>Derslik: A310</small>
							</a>
							<a href="#" class="list-group-item list-group-item-action">
								<div class="d-flex w-100 justify-content-between">
									<h5 class="mb-1">CS305 - Proje Teslimi</h5>
									<small class="text-warning">5 gün kaldı</small>
								</div>
								<p class="mb-1">Veritabanı Sistemleri dersi final projesi teslim tarihi</p>
								<small>Çevrimiçi Teslim</small>
							</a>
							<a href="#" class="list-group-item list-group-item-action">
								<div class="d-flex w-100 justify-content-between">
									<h5 class="mb-1">Fakülte Toplantısı</h5>
									<small class="text-muted">1 hafta kaldı</small>
								</div>
