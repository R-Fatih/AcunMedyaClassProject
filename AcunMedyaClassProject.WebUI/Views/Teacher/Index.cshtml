									<td>201901023</td>
									<td>Burak Öztürk</td>
									<td><input type="number" class="form-control form-control-sm" value="55"></td>
									<td><input type="number" class="form-control form-control-sm" value="45"></td>
									<td>49</td>
									<td>
										<select class="form-select form-select-sm">
											<option>AA</option>
											<option>BA</option>
											<option>BB</option>
											<option>CB</option>
